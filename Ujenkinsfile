pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                git 'https://github.com/Fairez-Rashid/jenkins-docker-maven-java-webapp.git'
                sh "echo source code downloaded "
                
            }
        }

        stage('Maven compile') {
            steps {
                sh "mvn clean compile"
                sh "echo maven compile completed"
            }
        }

        stage('Maven package') {
            steps {
                sh "mvn package -Dmaven.test.skip=true"
                sh "echo %CD%"
            }
        }
        stage('Maven Deploy') {
            steps {
                sh "ansible-playbook -i tomcat wardeploy"
                sh "War file deployed on remote tomcat server "
            }
        }

    }
}
