pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                git 'https://github.com/Fairez-Rashid/jenkins-docker-maven-java-webapp.git'
                sh "echo source code downloaded "
                
            }
        }

        stage('Maven compile') {
            steps {
                sh "mvn clean compile"
                sh "echo maven compile completed"
            }
        }

        stage('Maven package') {
            steps {
                sh "mvn package -Dmaven.test.skip=true"
                sh "echo %CD%"
                sh "mv /var/lib/jenkins/workspace/jenkinsci/target/java-web-app-1.0.war /var/lib/jenkins/workspace/jenkinsci/target/simple.war " 
            }
        }
     //   stage('Maven Deploy') {
     //       steps {
     //           dir("/home/ubuntu") {
     //                   sh "pwd"
               // sh "ansible-playbook -i /home/ubuntu/inventory/inventory.ini /home/ubuntu/del.yml"
               // sh "War file deployed on remote tomcat server "
     //       }
     //       }
     //   }
        stage('Deploy Maven Artifact') {
            steps {
               // ansiblePlaybook becomeUser: 'ubuntu', installation: 'ansible', inventory: '/home/ubuntu/inventory/inventory.ini', playbook: '/home/ubuntu/del.yml'      
               //   ansiblePlaybook become: true, becomeUser: 'ubuntu', installation: 'ansible', inventory: '/home/ubuntu/inventory/inventory.ini', playbook: '/home/ubuntu/del.yml'  
               ansiblePlaybook becomeUser: 'ubuntu', installation: 'ansible', inventory: '/home/ubuntu/inventory/inventory.ini', playbook: '/home/ubuntu/del.yml', sudoUser: root            
}

    }
}
}
